{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["jest", "testing"],
      "groupName": "tests"
    },
    {
      "matchPackagePatterns": ["react"],
      "groupName": "react"
    }
  ],
  "timezone": "Europe/Paris",
  "schedule": [
    "every weekend"
  ]
}
